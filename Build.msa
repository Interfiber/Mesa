%Workspace Mesa

%Variable Global.Includes Libraries/Include
%Variable Global.OptimizationMode O3
%Variable Global.EnableDebugSymbols true

%Config
{
	%Property CompilerName Clang++
	%Property BuildDirectory bin
	%Property EnableColor true
    %Property C++Standard 17
}

%Tasks
{
	%Task run ./build/FusionRuntime/fusionEngineRuntime -game projects/FusionSandbox -fpslimit 120 -developer
}

%Import Utils.msa
%Import Scriptlets.msa
%Import Base.msa

%Import data:Compilers.msa
